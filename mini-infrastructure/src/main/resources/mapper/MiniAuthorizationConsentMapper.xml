<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.dingdangmaoup.mini.platform.infrastructure.gateway.mapper.MiniAuthorizationConsentMapper">

    <resultMap id="BaseResultMap" type="com.dingdangmaoup.mini.platform.domain.model.MiniAuthorizationConsent">
            <id property="registeredClientId" column="registered_client_id" jdbcType="VARCHAR"/>
            <id property="principalName" column="principal_name" jdbcType="VARCHAR"/>
            <result property="authorities" column="authorities" jdbcType="VARCHAR"/>
            <result property="createBy" column="create_by" jdbcType="VARCHAR"/>
            <result property="createTime" column="create_time" jdbcType="TIMESTAMP"/>
            <result property="updateBy" column="update_by" jdbcType="VARCHAR"/>
            <result property="updateTime" column="update_time" jdbcType="TIMESTAMP"/>
            <result property="isDelete" column="is_delete" jdbcType="INTEGER"/>
    </resultMap>

    <sql id="Base_Column_List">
        registered_client_id,principal_name,authorities,
        create_by,create_time,update_by,
        update_time,is_delete
    </sql>
    <delete id="removeByClientIdAndPrincipalName">
        delete
        from mini_authorization_consent
        where registered_client_id = #{registeredClientId,jdbcType=VARCHAR}
          and principal_name = #{principalName,jdbcType=VARCHAR}
    </delete>
    <select id="getByRegisteredClientIdAndPrincipalName"
            resultType="com.dingdangmaoup.mini.platform.domain.model.MiniAuthorizationConsent">
        select
        <include refid="Base_Column_List"/>
        from mini_authorization_consent
        where registered_client_id = #{registeredClientId,jdbcType=VARCHAR}
        and principal_name = #{principalName,jdbcType=VARCHAR}
    </select>
</mapper>
